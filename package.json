{
  "name": "arxontes-bang-dice",
  "version": "1.0.0",
  "description": "Bang! The Dice Game Online",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "cd bang_frontend && npm install vite @vitejs/plugin-react -D && npm install && npm run build",
    "dev": "nodemon server.js",
    "dev:frontend": "cd bang_frontend && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:frontend\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
